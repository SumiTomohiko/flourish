#!/bin/sh

echo="/bin/echo"

immortal="false"
lib=""
stage="nil"
yog="yog"

while getopts il:s:y: opt
do
    case ${opt} in
        i) immortal="true";;
        l) lib=${OPTARG};;
        s) stage="\"${OPTARG}\"";;
        y) yog=${OPTARG};;
        *)
            ${echo} "usage: $0 [-i] [-l lib] [-s stage] [-y yog]"
            exit 1
            ;;
    esac
done
shift $((${OPTIND} - 1))

opts=""
if [ ! -z "${lib}" ]; then
    opts="${opts} --lib-path=${lib}"
fi

exec "${yog}" --young-heap-size=4M ${opts} <<EOF
from flourish import main
main(${stage}, ${immortal})
EOF

# vim: tabstop=4 shiftwidth=4 expandtab softtabstop=4
