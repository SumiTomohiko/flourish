
from flourish.ctrl.nop import Controller
from flourish.stage import MiscStage
from flourish.view.nop import View

class Stage > MiscStage
  def init()
    super(Controller, View)
  end

  def make_models(pc)
    pc.life = pc.life_max
    pc.kill_count = 0
    pc.ticks = 0
  end
end

